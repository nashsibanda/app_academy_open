<form action=<%= action %> method="post">
  <%= auth_token %>
  <input type="text" name="user[username]" id="user_username" placeholder="Enter username...">
  <input type="password" name="user[password]" id="user_password" placeholder="Enter password...">
  <button type="submit" class="form-button"><%= submit_text %> <i class="fas fa-user-plus"></i></button>
</form>