<!DOCTYPE html>
<html>
  <head>
    <title>MusicApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <% if current_user.nil? %>
        <%= render  "layouts/logged_out_links" %>
      <% else %>
        <%= render  "layouts/logged_in_links" %>
      <% end %>
      <%= yield :header %>
    </header>
    <main>
      <%= yield %>
    </main>
    <footer>
      <%= yield :footer %>
    </footer>
  </body>
</html>
