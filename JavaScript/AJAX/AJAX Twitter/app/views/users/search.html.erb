<h1>Search!</h1>

<%
=begin%>
 <form action="/users/search" method="GET">
  <input
    type="text"
    name="query"
    value="<%= @query %>">

  <input type="submit" value="Search Users!">
</form> 
<%
=end%>

<nav class="users-search">
  <input type="text" name="query" id="users-search-input">
  <ul class="users">
  </ul>
</nav>

<ul class="users-search-results">
  <% @users.each do |user| %>
    <li>
      <a href="<%= user_url(user) %>"><%= user.username %></a>
      <%= render 'follows/form', user: user %>
    </li>
  <% end %>
</ul>
